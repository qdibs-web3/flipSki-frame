{
  "version": 2,
  "buildCommand": "rm -rf node_modules package-lock.json && npm install && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/api/users/leaderboard", "destination": "/api/users/leaderboard.js" },
    { "source": "/api/users/:walletAddress/update-xp", "destination": "/api/users/[walletAddress]/update-xp.js" },
    { "source": "/api/users/:walletAddress", "destination": "/api/users/[walletAddress]/index.js" },
    { "source": "/api/(.*)", "destination": "/api/$1.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
