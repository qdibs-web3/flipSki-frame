{
  "version": 2,
  "buildCommand": "cd frontend && rm -rf node_modules package-lock.json && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/api/users/leaderboard", "destination": "/api/users/leaderboard.js" },
    { "source": "/api/users/([^/]+)/update-xp", "destination": "/api/users/[walletAddress]/update-xp.js?walletAddress=$1" },
    { "source": "/api/users/([^/]+)", "destination": "/api/users/[walletAddress]/index.js?walletAddress=$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
  ]
}