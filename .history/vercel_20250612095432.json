{
  "version": 2,
  "buildCommand": "cd frontend && npm run build && mkdir -p dist/.well-known && cp ../public/.well-known/farcaster.json dist/.well-known/farcaster.json",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    { "source": "/.well-known/farcaster.json", "destination": "/.well-known/farcaster.json" },
    { "source": "/api/users/:walletAddress/update-xp", "destination": "/api/users/[walletAddress]/update-xp" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}