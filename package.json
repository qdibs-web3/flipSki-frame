{
    "name": "flipski",
    "version": "1.0.0",
    "description": "FlipSki - Blockchain-based coin flip game",
    "private": true,
    "scripts": {
        "start": "cd frontend && npm start",
        "build": "cd frontend && npm run build",
        "install-all": "npm install && cd frontend && npm install",
        "dev": "concurrently \"cd frontend && npm run dev\" \"npm run dev:api\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:api": "node api-server.js"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "cloudflared": "^0.7.0",
        "concurrently": "^8.2.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^8.0.0"
    },
    "author": "",
    "license": "ISC"
}
